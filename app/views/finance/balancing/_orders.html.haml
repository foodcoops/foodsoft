- unless @orders.empty?
  - if Order.finished.count > 20
    = items_per_page
  = pagination_links_remote @orders
  %table.table.table-striped
    %thead
      %tr
        %th= t('.name')
        %th= t('.end')
        %th= t('.state')
        %th= t('.last_edited_by')
        %th
    %tbody
      - @orders.each do |order|
        %tr{:class => cycle("even","odd", :name => "order")}
          %td= link_to truncate(order.name), new_finance_order_path(order_id: order.id)
          %td=h format_time(order.ends) unless order.ends.nil?
          %td= order.closed? ? t('.cleared', amount: number_to_currency(order.foodcoop_result)) : t('.ended')
          %td= show_user(order.updated_by)
          %td
            - unless order.closed?
              - if order.invoice
                = link_to 'show invoice', finance_invoice_path(order.invoice), class: 'btn btn-mini'
              - else
                = link_to 'enter invoice', new_finance_invoice_path(:order_id => order, :supplier_id => order.supplier), class: 'btn btn-mini'
              = link_to 'receive order', new_finance_order_path(order_id: order.id), class: 'btn btn-mini btn-primary'
              -#= link_to t('.close'), close_direct_finance_order_path(order), :confirm => t('.confirm'), :method => :put, class: 'btn btn-mini'
- else
  %i= t('.no_closed_orders')
