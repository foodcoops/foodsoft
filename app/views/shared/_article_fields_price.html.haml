.row
  .col-sm-6
    = f.input :price, wrapper: :custom_form, label_html: { class: 'col-sm-12', style: "width:280px"}, input_html: { class: 'form-control col-sm-3' }, wrapper_html: { class: 'd-flex' } do
      .input-group
        %span.input-group-addon= t 'number.currency.format.unit'
        = f.input_field :price, class: 'form-control'
  .col-sm-6
    = f.input :price_unit, as: :select, wrapper: :custom_form, collection: [], label_html: { style: "width:50px;text-align: center; "}, input_html: {'data-initial-value': article.price_unit, class: 'form-control', style: 'margin-right:12px'}, label: t('articles.form.per'), include_blank: false,  wrapper_html: { class: 'd-flex'}
%div
  = f.input :tax do
    .input-group
      = f.input_field :tax, class: 'form-control', wrapper: :inline_form
      %span.input-group-addon %
  = f.input :deposit do
    .input-group
      %span.input-group-addon= t 'number.currency.format.unit'
      = f.input_field :deposit, class: 'form-control'
.row.d-flex.align-items-center{ style: "padding-bottom:15px" }
  .col-sm-3.control-label{for: 'article_fc_price', style: 'font-weight: 700'}
    = Article.human_attribute_name(:fc_price)
  .col-sm-9#article_fc_price
    %span.price_value
    %span.price_per_text=t('articles.form.per')
    %span.price_unit
