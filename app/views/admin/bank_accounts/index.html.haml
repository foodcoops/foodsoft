- title t('.title')

%p= link_to t('.new'), new_admin_bank_account_path, class: 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th= heading_helper BankAccount, :name
      %th= heading_helper BankAccount, :iban
      %th= heading_helper BankAccount, :description
      %th
  %tbody
    - @bank_accounts.each do |bank_account|
      %tr
        %td= bank_account.name
        %td= bank_account.iban
        %td= truncate bank_account.description, length: 50
        %td
          = link_to t('ui.edit'), edit_admin_bank_account_path(bank_account), class: 'btn btn-mini'
          = link_to t('ui.delete'), [:admin, bank_account], :method => :delete, :data => {:confirm => t('admin.confirm', name: bank_account.name)},
            class: 'btn btn-mini btn-danger'
