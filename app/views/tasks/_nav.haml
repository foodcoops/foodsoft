- content_for :actionbar do
  = link_to t('.new_task'), new_task_path, class: 'btn btn-primary'

- content_for :sidebar do
  .panel.panel-default
    .panel-heading
      %h3.panel-title= t '.pages'
    %ul.list-group
      = link_to t('.my_tasks'), user_tasks_path, class: 'list-group-item'
      = link_to t('.all_tasks'), tasks_path, class: 'list-group-item'
      = link_to t('.archive'), archive_tasks_path, class: 'list-group-item'

  .panel.panel-default
    .panel-heading
      %h3.panel-title= t '.group_tasks'
    %ul.list-group
      - for group in Workgroup.order(:name)
        = link_to group.name, workgroup_tasks_path(workgroup_id: group.id), class: 'list-group-item'

