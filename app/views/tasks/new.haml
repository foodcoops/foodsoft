- title t('.title')

= render 'form_sidebar'

.col-md-7
  = simple_form_for @task do |form|
    = render 'form', form: form, periodic: nil
    %div
      = form.submit class: 'btn btn-primary'
      = form.submit t('.submit_periodic'), name: 'periodic', class: 'btn'
      = link_to t('ui.or_cancel'), :back
