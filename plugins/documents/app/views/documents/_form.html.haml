= simple_form_for @document, validate: true do |f|
  = f.hidden_field :parent_id
  .modal-dialog
    .modal-content
      .modal-header
        = close_button :modal
        %h3.modal-title= @document.folder? ? t('.new_folder') : t('.new')
      .modal-body
        = f.input :name, as: :string, required: @document.folder?
        - if @document.file?
          = f.input :attachment, as: :file, input_html: {multiple: false}, direct_upload: true, required: true
      .modal-footer
        = link_to t('ui.close'), '#', class: 'btn btn-default', data: {dismiss: 'modal'}
        = f.submit t('.submit'), class: 'btn btn-primary'
